<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= posts.title %></h2>
      <img class="img-fluid" src="<%= posts.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= posts.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= posts.likes %></h3>
        <%if(posts.user == user.id){ %>
        <form
          action="/post/deletePost/<%= posts.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= posts.caption %></p>
    </div>
    <% for(var i=0; i<comments.length; i++) {%>
      <li class="col-6 justify-content-between mt-5">
        <%= comments[i].comment%>
      </li>
    <% } %>
    <div class="mt-5">
      <h2>Add a comment</h2>
      <form action="/comment/createComment/<%= posts.id %>" enctype="multipart/form-data" method="POST"> <!--error could be in one of the slashes-->
        <div class="mb-3">
            <!-- <label for="title" class="form-label">Comment</label> -->
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
      </form>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
