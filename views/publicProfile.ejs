<%- include('partials/navbarHeader') -%>

<div class="container">
  <div class="row mt-5">
    <div class="col-6">
     
      <div><%- include('partials/userDetails') -%></div>
      <% if (!following.includes(id)) { %>

      <form
        class="col-1"
        action="/users/followUser/<%= id %>?_method=PUT"
        method="POST"
      >
        <button
          class="btn btn-primary"
          type="submit"
        >
          follow
        </button>
      </form>
      <% } else { %>
      <form
        class="col-1"
        action="/users/unfollowUser/<%= id %>?_method=PUT"
        method="POST"
      >
        <button
          class="btn btn-primary"
          type="submit"
        >
          unfollow
        </button>
      </form>
      <% } %>
      <audio controls="controls">
        <source src="<%= !song ? 'https://docs.google.com/uc?export=download&id=0B-klwLEjaXWcZHR5SmJJWEwtYnc' : song %>">
      </audio>
    </div>
    <div class="col-6">
      <ul class="row list-unstyled">
        <% for(var i=0; i < posts.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <a href="/post/<%= posts[i]._id %>">
            <img
              class="img-fluid"
              src="<%= posts[i].image %>"
            />
          </a>
        </li>
        <% } %>
      </ul>
      <div class="row justify-content-center mt-5">
        <a
          class="btn btn-primary"
          href="/feed"
          >Return to Feed</a
        >
      </div>
    </div>
    <%- include('partials/following') -%> <%- include('partials/followers') -%>
  </div>
</div>
<%- include('partials/footer') -%>
