<%- include('partials/header') -%>

<main class="container mx-auto">
	<section class="flex flex-col items-center justify-center text-center">
		<form action="/login" method="POST">
			<div class="mb-6">
				<label for="exampleInputEmail1" class="block mb-2">Your email</label>
				<input
					type="email"
					class="border border-gray-400 p-1 rounded-md"
					id="exampleInputEmail1"
					aria-describedby="emailHelp"
					name="email"
				/>
			</div>
			<div class="mb-6">
				<label for="exampleInputPassword1" class="block mb-2">Your password</label>
				<input
					type="password"
					class="border border-gray-400 p-1 rounded-md"
					id="exampleInputPassword1"
					name="password"
				/>
			</div>
			<button
				type="submit"
				class="bg-orange-400 text-white hover:bg-orange-500 rounded-full px-12 py-3"
			>
				Submit
			</button>
		</form>
		<% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
		<div class="text-red-400 font-bold mt-12"><%= el.msg %></div>
		<% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach( el => { %>
		<div class="text-yellow-900 mt-12"><%= el.msg %></div>
		<% }) %> <% } %>
	</section>
</main>

<%- include('partials/footer') -%>
