<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= recipe.title %></h2>
      <img class="img-fluid" src="<%= recipe.image%>" />
      <div class="row justify-content-between">
        <!-- heart -->
        <form
          class="col-1"
          action="/recipe/likeRecipe/<%= recipe.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
       <!-- Favourites -->
        <form
        class="col-1"
        action="/recipe/favoriteRecipe/<%= recipe.id %>" method='POST'
      >
        <button class="btn btn-primary fa fa-star" type="submit"></button>
      </form>


        <h3 class="col-3">Likes: <%= recipe.likes %></h3>
        <%if(recipe.user == user.id){ %>
        <form
          action="/recipe/deleteRecipe/<%= recipe.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= recipe.ingredients %></p>
      <p><%= recipe.directions %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
