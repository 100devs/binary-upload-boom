<%- include('partials/header') -%> <!-- reusable page header -->
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%> <!-- a loop that is as long as the array that iterates through every post in the database -->
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>"> <!-- specific post route and plugging in the id of each post from the database -->
              <img class="img-fluid" src="<%= posts[i].image%>"> <!-- source of the image links back to the cloudinary url that is stored in my collection -->
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%> <!-- reusable page footer -->