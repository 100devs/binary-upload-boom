<%for(let i=0; i < comments.length; i++){%>
  <li class="col-6 justify-content-between mt-5">
    <h4>User: <%=user.userName%></h4>
    <h4>Comment: <%= comments[i].comment %></h4>
    <h6 class="col-3">Likes: <%= comments[i].likes %></h6>
    
    <form class="col-1" action="/comment/likeComment/<%=post._id%>/<%=comments[i]._id %>?_method=PUT" method="POST">
      <button class="btn btn-primary fa fa-heart" type="submit"></button>
      </form>
      <% if(comments[i].user == user.id){%>
        <form action="/comment/deleteComment/<%=post._id%>/<%=comments[i]._id %>?_method=DELETE" method="POST" class="col-3">
        <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
      <%}%>
  </li>
  <%}%>