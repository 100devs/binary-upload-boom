<%- include('partials/header') -%>

<link href="https://cdn.jsdelivr.net/npm/daisyui@2.31.0/dist/full.css" rel="stylesheet" type="text/css" />

<body>
  <div class="navbar bg-base-100">
    <div class="flex-none">
      <ul class="menu menu-horizontal p-0">
        <li tabindex="0">
          <a a href="/admin">
            Select a function
            <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/></svg>
          </a>
          <ul class="p-2 bg-base-100">
            <li><a href="/addAnnouncement">Add Announcement</a></li>
            <li><a href="/addPlayer">Add Player</a></li>
            <li><a href="/addMatch">Add Match</a></li>
            <li><a href="/newSeason">Start New Season</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
    <form action="/admin/createPlayer" method="POST">
        <div class="tab-pane fade" id="tabs-addPlayer" role="tabpanel" aria-labelledby="tabs-addPlayer">
          <!-- email -->
          <div class="flex justify-center">
              <div class="mb-3 xl:w-96">
                <label for="exampleEmail0" class="form-label inline-block mb-2 text-gray-700"
                  >Email</label
                >
                <input
                  type="email"
                  class="input input-bordered w-full max-w-xs"
                  id="exampleEmail0"
                  placeholder="Email input"
                  name="email"
                />
              </div>
            </div>
            <!-- first name -->
            <div class="flex justify-center">
              <div class="mb-3 xl:w-96">
                <label for="exampleText0" class="form-label inline-block mb-2 text-gray-700"
                  >First Name</label
                >
                <input
                  type="text"
                  class="input input-bordered w-full max-w-xs"
                  id="exampleText0"
                  placeholder=""
                  name="firstName"
                />
              </div>
            </div>
            <!-- last name -->
          <div class="flex justify-center">
              <div class="mb-3 xl:w-96">
                <label for="exampleEmail0" class="form-label inline-block mb-2 text-gray-700"
                  >Last Name</label
                >
                <input
                  type="text"
                  class="input input-bordered w-full max-w-xs"
                  id="exampleEmail0"
                  placeholder=""
                  name="lastName"
                />
              </div>
            </div>
            <!-- league -->
            <label class="block text-left" style="max-width: 300px">
              <span class="text-gray-700">League</span>
              <select class="form-multiselect select select-bordered w-full max-w-xs" multiple name="league">
                <option>5.0 Men</option>
                <option>4.5 Men</option>
                <option>4.0 Men</option>
                <option>3.5 Men</option>
                <option>4.5+ Women</option>
                <option>4.0 Women</option>
              </select>
            </label>
            <!-- pref courts -->
            <div class="flex justify-center">
              <div class="mb-3 xl:w-96">
                <label for="exampleEmail0" class="form-label inline-block mb-2 text-gray-700"
                  >Preferred Courts</label
                >
                <input
                  type="text"
                  class="select select-bordered w-full max-w-xs"
                  id="exampleEmail0"
                  placeholder="Wimbledon"
                  name="prefCourt"
                />
              </div>
            </div>
            <!-- Pref times -->
            <div class="flex justify-center">
              <div class="mb-3 xl:w-96">
                <label for="exampleEmail0" class="form-label inline-block mb-2 text-gray-700"
                  >Preferred Times</label
                >
                <input
                  type="text"
                  class="select select-bordered w-full max-w-xs"
                  id="exampleEmail0"
                  placeholder="After 5PM MWF"
                  name="prefTime"
                />
              </div>
            </div>
            <!-- next section -->
            <div class="flex space-x-2 justify-center">
              <button type="Submit" class="btn">Submit Player</button>
            </div>
          </form>
</body>
    

<%- include('partials/footer') -%>
