<%- include('partials/header') -%>
  <div class="container justify-content-center mt-5 border">
    <div class="d-flex flex-row">
      <img class="img-fluid m-1 col" src="<%= post.image%>" />
      <div class="d-flex flex-column col m-1">
        <div class="border-bottom">
          <h2>
            <%= post.title %>
          </h2>
        </div>
        <div class="flex-fill">

          <ul>

            <li class="mt-3 border-bottom">
              <% for (let i = 0; i < users.length; i++) { %>
                <% if (String(users[i]._id) == post.user) { %>
                  <span class="fw-bold"> <%= users[i].userName %>: </span>
                <% } %>
              <% } %>
              <span><%= post.caption %></span>
            </li>
            
            <% for (let i=0; i < comments.length; i++) {%>
              <li class="mt-3 border-bottom">
                <% for (let j = 0; j < users.length; j++) { %>
                  <% if (String(users[j]._id) === comments[i].user) { %>
                    <span class="fw-bold"> <%= users[j].userName %>:</span>
                  <% } %>
                <% } %>
                <span> <%= comments[i].comment %> </span>
              </li>
              <% } %>
          </ul>
        </div>
        <div>
          <form action="/comment/createComment/<%= post._id %>" method="POST">
            <div class="mt-5">
              <input type="text" class="form-control" id="comment" name="comment" placeholder="Comment">
              <div class="flex-row">

                <button type="submit" class="btn btn-primary">Post</button>
                <form class="col-1" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
                  <button class="btn btn-primary fa fa-heart" type="submit"></button>
                </form>
                <span class="col-3">Likes: <%= post.likes %></span>
                <% if(post.user==user.id){ %>
                  <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-3">
                    <button class="btn btn-primary fa fa-trash" type="submit"></button>
                  </form>
                <% } %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

