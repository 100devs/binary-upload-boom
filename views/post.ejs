<%- include('partials/header') -%>
<%- include('partials/nav') -%>

<main class="post container">
  <!-- image row-->
  <div class="row justify-content-center mb-5">
    <img class="img-fluid mt-5 " src="<%= post.image%>" />
  </div>

  <!-- post data and form row-->
  <div class="row justify-content-between">
    <!-- post data column-->
    <div class="col-6 postData">
      <h3><%= post.title %></h3>
      <p><%= post.caption %></p>
      <%if(post.likes != 0){ %>
        <span><i class="fa fa-heart"></i>  <%= post.likes %> </span>
      <%}%>
    </div>
    
    <!-- form column-->
    <div class="col-6 interact">
      
      <!--comment form-->
      <form action="/comment/createComment/<%=post.id%>" method="POST">
        <input type="text" class="form-control mb-1" id="comment" name="comment" placeholder="Comment">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </form>
      <!--like post-->
      <form class="col-1" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
        <button class="btn btn-primary fa fa-heart" type="submit"></button>
      </form>
      <!--delete post-->
      <%if(post.user == user.id){ %>
        <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-1">
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
      <%}%>
    </div>
  </div>
  <section class="row  mt-4 comments">
    <h4>Comments</h4>
    <!--comments by users-->
    <ul class="list-unstyled">
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="row justify-content-between">
          <div class="col-6">
            <p>"<%=comments[i].comment%>"</p>
            <span>- <%=comments[i].user%> </span>
            <%if(comments[i].likes != 0){ %>
              <span class="likes"><i class="fa fa-heart"></i>  <%= comments[i].likes %></span>
            <%}%>
          </div>
          <div class="col-3">
            <!--like comment-->
            <form class="col-1" action=
            "/comment/likeComment/<%= comments[i]._id %>?_method=PUT" method="POST">
              
              <button class="btn btn-primary fa fa-heart" type="submit"></button>
            </form>

            <!--delete comment-->
            
          </div>
        </li>
      <% } %>
    </ul>
  </section>
</main>

<%- include('partials/footer') -%>
