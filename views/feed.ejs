<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <!-- loops through all the posts-->
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
              <!-- loops through all the comments for this post -->
            </a>
            <ul class="list-unstyled">
              <% for(var j=0; j<posts[i].comments.length; j++) { %>
                <li><%= posts[i].comments[j].comment%></li>
                <li><%= posts[i].comments[j].createdAt%></li>
                <li><%= posts[i].comments[j].user.userName%></li>
              <% } %>
            </ul>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>