<div class="container">
	<div class="row">
		<div class="col-lg-4 col-md-4 mb-4 mb-lg-0">
			<% for(var i=0; i<posts.length; i ++) {%>
				<a href="/post/<%= posts[i]._id%>">
					<img class="w-100 shadow-1-strong rounded mb-4" src="<%= posts[i].image%>">
				</a>
				<% if (i%2 == 0) { %>
					</div>
					<div class="col-lg-4 col-md-4 mb-4 mb-lg-0">
				<% } %>
			<% } %>
		</div>
	</div>
</div>