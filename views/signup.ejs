<%- include('partials/header') -%>
    <main class="signup container">
        <div class="row justify-content-center">
          <section class="col-6">
            <h2>Sign up</h2>
            <!-- display error messages -->
            <% if (locals.messages.errors) { %>
              <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
              <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
              <% messages.info.forEach( el => { %>
                <div class="alert alert-info"><%= el.msg %></div>
              <% }) %>    
            <% } %>
            <!--form-->
            <form action="/signup" method="POST">
              <div class="mb-1">
                <input type="text" class="form-control mb-1" id="userName" name="userName" placeholder="Username">
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="Email address">
                <div id="emailHelp" class="form-text mb-1">We never share your email with anyone.
                </div>
                <input type="password" class="form-control mb-1" id="password" name="password" placeholder="Password">
                <input type="password" class="form-control mb-1" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </section>
        </div>
    </main>

<%- include('partials/footer') -%>