<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <p><%= user.userName %>: <strong>is logged in.</strong></p>
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
          
            <a href="/post/<%= posts[i]._id%>" class="text-decoration-none">
              <img class="img-fluid" src="<%= posts[i].image%>">
              <p class="text-dark"><%= formatDate(posts[i].createdAt) %></p>
              <% function formatDate(date) { %>
                <% const options = { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric' }; %>
                <% const formattedDate = new Date(date).toLocaleString(undefined, options); %>
                <% return formattedDate; %>
              <% } %>
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>