
<!--The page where all the posts are listed, that are partial to the app-->


<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <!--Looped through the array of posts in the database-->
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <!--inside of the loop, its creating an anchor tag and dropping an image in there, it's grabbing the id of the post in the database
            //it passes that id up to the server, so that the server knows what retrieve and how to render the individual page for that post.-->
            <a href="/post/<%= posts[i]._id%>">  <!--the route is /post/uniqueID-->
              <!--for each post drop in the image-->
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>