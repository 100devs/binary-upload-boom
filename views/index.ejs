<%- include('partials/header') -%>
<link href="https://cdn.jsdelivr.net/npm/daisyui@2.31.0/dist/full.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2/dist/tailwind.min.css" rel="stylesheet" type="text/css" />
<main class="container">
    <div class="row justify-content-around mt-5">
        <a href="/login" class="col-3 btn btn-primary"> Login</a>
        <a href="/signup" class="col-3 btn btn-primary"> Signup</a>
    </div>
<!-- Announcements box -->
    <p class="text-xl font-light leading-relaxed mt-6 mb-4 text-gray-800">   
    <div class="container">
        <div class="row justify-content-center mt-5">
          <ul class="row list-unstyled">
            <!-- loops through each announcement and builds li for each -->
            <% for(var i=0; i<announcements.length; i++) {%>
              <li class="col-6 justify-content-between mt-5">
                <!-- each of these is an anchor tag to this home route -->
                <a href="/home/<%= announcements[i]._id%>">
                    <%= announcements[i].announcementText%>
                </a>
              </li>
            <% } %>
            </ul>
        </div>
      </div>  
    </p>
<!-- Leaderboard box -->
    <div class="overflow-x-auto">
      <table class="table w-full">
        <!-- head -->
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>W/L</th>
            <th>Points</th>
          </tr>
        </thead>
        <tbody>
          <!-- row 1 -->
          <tr>
            <th>1</th>
            <td>Cy Ganderton</td>
            <td>54-10</td>
            <td>540</td>
          </tr>
          <!-- row 2 -->
          <tr>
            <th>2</th>
            <td>Hart Hagerty</td>
            <td>45-35</td>
            <td>450</td>
          </tr>
          <!-- row 3 -->
          <tr>
            <th>3</th>
            <td>Brice Swyre</td>
            <td>34-21</td>
            <td>340</td>
          </tr>
        </tbody>
      </table>
    </div>
</main>
    

<%- include('partials/footer') -%>