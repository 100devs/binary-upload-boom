<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%=post.title%></h2>
      <img class="img-fluid" src="<%=post.image%>" />
      <div class="row justify-content-start mt-2">
        <form
          class="col-md-auto"
          action="/post/likePost/<%=post._id%>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h4 class="col-md-auto">Likes: <%=post.likes%></h3>
        <%if(post.user == user.id){%>
        <form
          action="/post/deletePost/<%=post._id%>?_method=DELETE"
          method="POST"
          class="col-md-auto"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%=post.caption%></p>
    </div>
    <div class="mt-5">
      <h2>Comments</h2>
      <form action="/comment/createComment/<%=post._id%>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Add a comment:</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div>
      <ul class="list-unstyled">
        <%for(let i=0; i<comments.length; i++){%>
          <li class="row justify-content-start mt-5">
            <span><%=comments[i].createdAt.toLocaleDateString()%>, <%=comments[i].user.userName%>: <%=comments[i].comment%></span>
                        <form
              class="col-md-auto"
              action="/comment/likeComment/<%=comments[i]._id%>?_method=PUT"
              method="POST"
            >
              <button class="btn btn-primary fa fa-heart" type="submit"></button>
            </form>
            <h5 class="col-md-auto">Likes: <%=comments[i].likes%></h3>
            <%if(comments[i].user._id == user.id){%>
            <form
              class="col-md-auto"  
              action="/comment/deleteComment/<%=comments[i]._id%>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
            <%}%>
          </li>
        <%}%>
      </ul>
    </div>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
