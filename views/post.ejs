<%- include('partials/header') -%>
<%- include('partials/nav') -%>

<main class="post container">
  <!-- image row-->
  <div class="row justify-content-center">
    <!-- <div class="imgAndBtns"> -->
    <img class="img-fluid" src="<%= post.image%>" />
  </div>

  <!-- post data and form row-->
  <div class="row justify-content-between">
    <!-- post data column-->
    <div class="col-6 postData">
      <h3><%= post.title %></h3>
      <p><%= post.caption %></p>
      <h5>Likes: <%= post.likes %></h5>
    </div>
    
    <!-- form column-->
    <div class="col-6 interact">
      
      <!--comment form-->
      <form action="/comment/createComment/<%=post.id%>" method="POST">
        <input type="text" class="form-control" id="comment" name="comment" placeholder="Comment">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </form>
      <!--like post-->
      <form class="col-1" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
        <button class="btn btn-primary fa fa-heart" type="submit"></button>
      </form>
      <!--delete post-->
      <%if(post.user == user.id){ %>
        <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-1">
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
      <%}%>
    </div>
  </div>
  <section class="row comments">
    <!--comments by users-->
    <div class="col-3 mt-5">
      <ul class="list-unstyled">
        <% for(var i=0; i<comments.length; i++) {%>
          <li>
            <p>"<%=comments[i].comment%>"</p>
            <span>- <%=comments[i].user%></span>
          </li>
        <% } %>
      </ul>
    </div>
    <!-- <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div> -->
  </section>
</main>

<%- include('partials/footer') -%>
