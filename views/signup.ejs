<!DOCTYPE html>
<html lang="en" data-theme="aqua">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HìnH</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.31.0/dist/full.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
<div class="navbar bg-base-100">
  <div class="navbar-centerCnter">
    <a class="btn btn-ghost normal-case text-5xl">HìnH</a>
  </div>

</div>

<main class="containerNer">
  <div class="row justify-content-center">
      <section class="col-6 mt-5">
          <% if (locals.messages.errors) { %>
              <% messages.errors.forEach( el => { %>
                  <div class="alert alert-danger"><%= el.msg %></div>
              <% }) %>    
          <% } %>
          <% if (locals.messages.info) { %>
              <% messages.info.forEach( el => { %>
                  <div class="alert alert-info"><%= el.msg %></div>
              <% }) %>    
          <% } %>
          <form action="/signup" method="POST">
              <div class="form-control">
                  <label for="userName" class="label">User Name</label>
                  <input type="text" class="input input-bordered" id="userName" name="userName">
                </div>
              <div class="form-control">
                <label for="exampleInputEmail1" class="label">Email address</label>
                <input type="email" class="input input-bordered" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
              </div>
              <div class="form-control">
                <label for="password" class="label">Password</label>
                <input type="password" class="input input-bordered" id="password" name="password">
              </div>
              <div class="form-control">
                  <label for="confirmPassword" class="label">Confirm Password</label>
                  <input type="password" class="input input-bordered" id="confirmPassword" name="confirmPassword">
                </div>
                <div class="mega">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
      </section>
  </div>
</main>


  </body>
  <script src="https://cdn.tailwindcss.com"></script>
  </html>

<%- include('partials/footer') -%>
