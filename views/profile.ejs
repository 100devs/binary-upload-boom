          <div class="mt-5">
            <h2>Add a Movie</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Movie Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
              <label for="country" class="form-label">What category is the movie</label>
              <select class="form-select" aria-label="Default select example" id="country" name="country">
                <option selected>Select Category</option>
                <option value="Action ðŸ‡¦c">Action</option>
                <option value="Horror">Horror</option>
                <option value="Western">Western</option>
                <option value="Drama">Drama</option>
                <option value="Crime Film">Crime Film</option>
                <option value="Thriller">Thriller</option>
                <option value="Comedy Horror">Comedy Horror</option>
                <option value="Cartoon">Cartoon</option>
                <option value="Romantic">Romantic</option>
                <option value="Anime">Anime</option>
                <option value="Romatic Comedy">Romatic Comedy</option>
                <option value="Adventure">Adventure</option>
                <option value="Mystery">Mystery</option>
                <option value="Sports">Sports</option>
                <option value="Indie Film">Indie Film</option>
                <option value="Shorts">Shorts</option>
                <option value="Musicals">Musicals</option>
                <option value="Fiction">Fiction</option>
                <option value="Fantasy">Fantasy</option>
              </select>
              </div>
              <div class="mb-3">
                <label for="basic-url" class="form-label">Rating</label>
                <select class="form-select" aria-label="Default select example" id="dish" name="dish">
                  <option selected>Please Select</option>
                  <option value="One Star">One Star</option>
                  <option value="Two Star">Two Star</option>
                  <option value="Three Star">Three Star</option>
                  <option value="Four Star">Four Star</option>
                  <option value="Five Star">Five Star</option>
                </select>
                </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Description</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="ingredients" class="form-label">Reason</label>
                <textarea class="form-control" id="ingredients" name="ingredients" placeholder="Why do you like the Movie." rows="5"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
