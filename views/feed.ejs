<%- include('partials/header', {title: "Feed", page: 'feed'}) -%>

<div class="container">
	<div class="row">
		<div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
			<% for(var i=0; i<posts.length; i += 3) {%>
				<a href="/post/<%= posts[i]._id%>">
					<img class="w-100 shadow-1-strong rounded mb-4" src="<%= posts[i].image%>">
				</a>
			<% } %>
		</div>

		<div class="col-lg-4 mb-4 mb-lg-0">
			<% for(var i=1; i<posts.length; i += 3) {%>
				<a href="/post/<%= posts[i]._id%>">
					<img class="w-100 shadow-1-strong rounded mb-4" src="<%= posts[i].image%>">
				</a>
			<% } %>
		</div>

		<div class="col-lg-4 mb-4 mb-lg-0">
			<% for(var i=2; i<posts.length; i += 3) {%>
				<a href="/post/<%= posts[i]._id%>">
					<img class="w-100 shadow-1-strong rounded mb-4" src="<%= posts[i].image%>">
				</a>
			<% } %>
		</div>
	</div>
</div>
<%- include('partials/footer') -%>
