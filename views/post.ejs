<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <img class="img-fluid" src="<%= post.image %>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"><span class='ps-2'><%= post.likes %></span></button>
        </form>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= post.caption %></p>
      <h4>Comments</h4>
      <ul class="list-group">
        <% for (let comment of comments) { %>
          <li class="list-group-item">
            <p><%= comment.comment %></p>
            <div class='row justify-content-between'>
              <% if (comment.hasReplies) { %>

              <% } %>
              <form
                class="col-1"
                action="/comment/likeComment/<%= comment._id %>?_method=PUT"
                method="POST"
              >
                <input type="hidden" name="postId" value="<%=post.id%>">
                <button class="btn btn-primary fa fa-heart" type="submit"><span class='ps-2'><%= comment.likes %></span></button>
              </form>
              <%if(post.user == user.id){ %>
                <form
                  action="/comment/deleteComment/<%= comment._id %>?_method=DELETE"
                  method="POST"
                  class="col-1"
                >
                  <input type="hidden" name="postId" value="<%=post.id%>">
                  <button class="btn btn-primary fa fa-trash" type="submit"></button>
                </form>
              <%}%>
            </div>
          </li>
        <% } %>
      </ul>
      <h5>Add Comment</h5>
      <form
        action="/comment/addComment/<%= post.id %>"
        method="post"
      >
        <input type="text" name="comment" id="comment">
        <button class="btn btn-primary fa fa-plus" type="submit"></button>
      </form>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
