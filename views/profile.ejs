<%- include('partials/header') -%>


<main class="container profile">
  <!--row containing the create post and activity sections-->
  <div class="row mt-5">
    <h2>Welcome, <%= user.userName %>.</h2>
    <!--section to create new post-->
    <section class="mt-5 col-6">
      <h3>Create new post</h3>
      <form action="/post/createPost" enctype="multipart/form-data" method="POST">
        <div class="mb-3">
          <input type="text" class="form-control" id="title" name="title" placeholder="Title">
          <textarea class="form-control" id="caption" name="caption" placeholder="Caption"></textarea>
          <input type="file" class="form-control" id="imageUpload" name="file">
        </div>
        <button type="submit" class="btn">Upload</button>
      </form>
    </section>
    <!--section for activity feed (likes, comments)-->
    <section class="mt-5 col-6">
      <h3>Activity feed</h3>
      <p>This area will soon feature comments and likes from other users on your posts.</p>
      <ul class="row list-unstyled">
        <!--edit the code below to show aggregate list of comments and likes on logged in user's posts -->
        <!-- <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %> -->
      </ul>
    </section>
  </div>
  <!--row containing posts created by the logged in user-->
  <section class="userPosts row mt-5">
    <ul class="row list-unstyled">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <a href="/post/<%= posts[i]._id%>">
            <img class="img-fluid" src="<%= posts[i].image%>">
          </a>
        </li>
      <% } %>
    </ul>
  </section>
</main>
<%- include('partials/footer') -%>