<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>Character Name</strong>: <%= user.userName %></p> 
              <!-- <p><strong>Email</strong>: <%= user.email %></p> -->
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Personal Journal Entry</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Entry</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
          <div class="mt-5">
            <h2>Shared Journal Entry</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Entry</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
          <div class="mt-5">
            <h2>Add an Image</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Character Sheet</a>
        </div>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Inventory</a>
        </div> 
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Personal Journal</a>
        </div>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Shared Journal</a>
        </div>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Quest(s)</a>
        </div>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Images</a>
        </div>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Transportation</a>
        </div>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">NPC Crew</a>
        </div> 
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">View all the Above</a>
        </div>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Rules</a>
        </div>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Create/Edit Character Sheet</a>
        </div>
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>